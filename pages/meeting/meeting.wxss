@import "/wxParse/wxParse.wxss";   
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.tab-h {
  font-size: 30rpx;
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #dcdcdc;
  box-shadow: 0 2px 10px #eee
}

.tab-item {
  width: 33.33%;
  text-align: center;
  display: inline-block;
  color: #000;
}
.tab-item.active {
  color: #017ff7;
  position: relative;
}

.tab-item.active:after {
  content: "";
  display: block;
  height: 6rpx;
  width: 60rpx;
  background: #017ff7;
  position: absolute;
  bottom: 1rpx;
  left: 95rpx;
}
.scoll-h {
  height: 100%;
  padding: 0 12rpx;
  width: 100%;
  box-sizing: border-box;
}
