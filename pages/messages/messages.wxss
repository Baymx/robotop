/* pages/messages/messages.wxss */
page{
  background: #f5f5f5;
}
.none{
  display: none;
}
.leaveingmessage{
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx;
  border-top: 1rpx solid #eee;
}
.leaveingmessage textarea{
  display: block;
  width: 690rpx;
  height: 334rpx;
  background: #fff;
  border: 1rpx solid #eee;
  border-radius: 14rpx;
  padding: 10rpx;
  font-size: 32rpx;
  color: #333;
}
.leaving-btn {
  margin-top: 91rpx;
  text-align: center;
}
.leaving-btn{
  display: block;
  width: 570rpx;
  height: 70rpx;
  border: 1rpx solid #027ef8;
  border-radius: 35rpx;
  font-size: 32rpx;
  line-height: 70rpx;
  margin: 0 auto;
  color: #027ef8;
  margin-top:50rpx;
}
.nones{
  opacity: 0;
}
.messages-box{
  border-top: 1rpx solid #eee;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.message-group{
  background: #fff;
  border-radius: 18rpx;
  padding: 15rpx 10rpx 25rpx;
  position: relative;
  box-shadow: 0 0 10px #e2e2e2;
  margin-bottom: 30rpx;
}
.left-userimg{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
  display: inline-block
}
.left-userimg image{
  width: 100%;
  height: 100%
}
.right-username{
  float: left;
  width: 550rpx;
}
.top-name-time-like{
   margin-left: 20rpx;
   margin-bottom: 20rpx;
}
.top-tit{
  font-size: 34rpx;
  display: block;
}
.clickoff{
  float:right;
  width: 60rpx;
  height: 60rpx;
}
.top-time{
  font-size: 26rpx;
  color: #999;
  padding: 12rpx 0 0 0;
}
.like-num{
  float: right;
  font-size: 28rpx;
  color: #999;
  width: 40rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}
.top-info{
  color: #666;
  font-size: 30rpx;
  margin-top: 8rpx;
  line-height: 52rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.gf{
  padding-top: 15rpx;
  border-top: 1rpx solid #eee;
}
.gf .top-tit{
  font-size: 30rpx;
  padding-left:10rpx;
  border-left: 6rpx solid #027ef8; 
}
.liu{
  width:75rpx;
  height:75rpx;
  line-height: 75rpx;
  color: #ffffff;
  border-radius: 50%;
  text-align: center;
  background-color: rgba(0,0, 0, 0.6);
  font-size: 26rpx;
  position: fixed;
  top: 100rpx;
  right: 50rpx;
}