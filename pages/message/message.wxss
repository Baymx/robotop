/* pages/message/message.wxss */
page{
  background-color: #f5f5f5;
}
.container{
  width: 100%;
  height: 100%;
}
.messList{
  width: 710rpx;
  height: 218rpx;
  background: #ffffff;
  margin: auto;
  margin-top: 20rpx;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 4rpx 4rpx #EBEBEB;
  padding-left: 20rpx;
  padding-top: 20rpx;
}
.header{
  height: 35rpx;
  line-height: 35rpx;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.messImg{
  width: 45rpx;
  height: 35rpx;
  margin-right: 10rpx;
  position: relative;
  bottom: -5rpx;
}
.none{
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  line-height: 15rpx;
  border-radius: 50%;
  background: #E91616;
  margin-left: 10rpx;
  margin-top: auto;
  position: relative;
  bottom: 3rpx;
}
.sure{
  display: none;
}
.time{
  margin-left: 45rpx;
  color:#999999;
  font-size: 22rpx;
}
.messText{
  width: 620rpx;
  font-size: 26rpx;
  line-height: 52rpx;
  color: #666666;
  margin-top: 17rpx;
  margin-left: 45rpx;
  text-align:justify;
  display:-webkit-box;
  word-break:break-all;
  text-overflow:ellipsis;
  overflow:hidden;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
}