@import "/wxParse/wxParse.wxss"; 
.news{
  width: 96%; 
  margin: auto;
}
.wxParse-p{
  overflow: hidden;
}
.sss{
  display: inline-block !important;
  font-size:26rpx !important;
  color:#666666;
  font-weight: 100 !important;
}
.title{
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
  margin-top: 50rpx;
}
.time{
  text-align: center;
  margin-bottom: 24rpx;
}






.news text{
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
}
.news-time{
  text-align: center;
}
.news-time text{
  display: block;
  color: #999;
  font-size: 30rpx;
  margin-bottom: 40rpx;
}
.news-nr{
  width: 100%;
  box-sizing: border-box;
  padding: 0 24rpx;
}
.news-nr text{
  display: block;
  font-size: 32rpx;
  color: #333;
  line-height: 62rpx;
  text-indent: 34rpx;
  text-align: justify;
}
.news-nr image{
  display: block;
  width: 702rpx;
  height: 320rpx;
  margin: 35rpx 0;
}